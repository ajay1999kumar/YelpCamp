<%- include("../partials/header")%>


<div class="container">
	
	<header class="jumbotron">
		<div class="container">
			<h1> Welcome to YelpCamp! </h1>
			<p>View all hand picked campground pics</p>
			<p>	<a class="btn btn-primary btn-lg"href="/campground/new" >Add new campground</a>	</p>


			
		</div>
		
		
		
	</header>
	
	<div class="row ">
		<div class="col-lg-12">
			<h3>	Most popular site!  </h3>
		</div>
		
	</div>
	
	<div class="row text-center" style="display: flex;flex-wrap: wrap" >
	  <% campground.forEach(function(camps){ %>
			
		<div class="col-lg-3 col-md-4 col-sm-6"  >
			<div class="thumbnail">
				<img src="<%=camps.image%>">
				<div class="caption">
					<h4> <%=camps.name%> </h4>
				</div>
				<p>
					<a href="/campground/<%=camps._id%>" class="btn btn-primary btn-sm">More Info</a>
				</p>
				
			</div>
			
				
				
			
			
	
			
		</div>
	  <% }) %>
		
	</div>
	
	

	

	
	
</div>


<%- include("../partials/footer")%>